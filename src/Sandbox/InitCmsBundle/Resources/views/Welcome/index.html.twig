{% extends "SandboxInitCmsBundle::base.html.twig" %}

{% block title %}Welcome to the initcms{% endblock title %}
{% block container_class %}container-narrow{% endblock container_class %}




{% block content %}
    <div class="hero-unit" style="background-color: #000000">

        <div class="row-fluid">
            <div class="span3">
                <img src="{{ asset('bundles/networkinginitcms/img/logo_initcms.png') }}">
            </div>
            <div class="span9">
                <h1 class="muted">Welcome to the init cms</h1>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="middle">
                {% if form is defined %}
                    <form action="{{ path('_install_db') }}" method="POST" id="install_form">
                        {{ form_errors(form) }}

                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.password) }}

                        {{ form_rest(form) }}
                        <input type="submit" class="btn btn-primary" value="Send" />
                    </form>
                {% else %}
                <h2>Lets get this thing configured</h2>
                <a class="btn" href="{{ action.url }}">{{ action.label }}</a>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock content %}



{% block foot_script %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            window.prettyPrint && prettyPrint();
        });
    </script>
{% endblock foot_script %}

